{
	"compilerOptions": {
		"lib": ["dom", "esnext"],
		"sourceMap": true,
		"outDir": "dist/",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"jsx": "react",
		"jsxFactory": "h",
		"strict": true,
		"target": "es5",
		"removeComments": true
	},
	"include": ["src/**/*.tsx", "src/**/*.ts"],
	"baseUrl": ".",
	"exclude": ["node_modules", "dist"]
}
