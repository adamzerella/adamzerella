{
	"compilerOptions": {
		"lib": ["dom", "esnext"],
		"sourceMap": true,
		"outDir": "dist/",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"jsx": "react",
		"jsxFactory": "h",
		"strict": true,
		"target": "es5",
		"module": "commonjs",
		"resolveJsonModule": true,
	},
	"include": ["src/**/*.tsx", "src/**/*.ts"],
	"exclude": ["node_modules"]
}
